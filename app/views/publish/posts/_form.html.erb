<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">new category</h3>
  </div>
  <div class="panel-body">
    <div class="container form-horizontal">
      <%= form_for [:publish, @post] do |f| %>
        <div class="form-group">
          <div class="col-md-offset-3">
            <%= render "shared/error_messages", object: f.object %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :category, class: "col-md-3 control-label" %>
          <div class="col-md-5">
            <%= f.select :category_id, @categories.collect {|c| [c.name, c.id]},
              {}, {class: "form-control"} %>
          </div>
        </div>

        <%= f.fields_for :post_types do |ff| %>
          <div class="form-group">
            <%= ff.label :type, class: "col-md-3 control-label" %>
            <div class="col-md-5">
              <%= ff.select :type_id, @categories.first.types.collect {|c| [c.name, c.id]},
                {}, {class: "form-control select2-input"} %>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title, class: "col-md-3 control-label" %>
          <div class="col-md-5">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :content, class: "col-md-3  control-label" %>
          <div class="col-md-5">
            <%= f.text_area :content, class: "form-control ckeditor" %>
          </div>
        </div>

        <div class="form-group" >
          <div class="col-md-5 col-md-offset-3">
            <%= f.submit yield(:button_text),
              class: "btn btn-primary form-control" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
