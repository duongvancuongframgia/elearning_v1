<div class="login-title text-center">
  <h1>
    <i class="gi gi-flash"></i>
    <strong><%= t "workspace"%> </strong>
    <br>
    <small>
      <%= t "please" %>
      <strong><%= t "enter_email" %></strong>
    </small>
  </h1>
</div>

<div class="block push-bit">
  <%= form_for resource, html: {class: "form-horizontal form-bordered form-control-borderless",
    method: :post}, as: resource_name,
    url: password_path(resource_name) do |f| %>
    <%= render "shared/error_mesages_devise", resource: resource %>

    <div class="form-group">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="gi gi-envelope"></i>
          </span>
          <div>
            <%= f.email_field :email, autofocus: true,
              class: "form-control", placeholder: t("enter_email") %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group form-actions" style="margin-left: 15px; margin-right:15px">
      <div class="col-md-offset-5">
        <%= f.submit t("send_mail"),
          class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
