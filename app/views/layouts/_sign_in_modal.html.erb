<div class="modal fade" id="signin_modal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="subtitle wow fadeInDown text-center"
          data-wow-duration="500ms" data-wow-delay=".3s">Log in</h4>
      </div>
      <div class="modal-body">
        <div class="signin-form">
          <%= form_for(:user, url: new_user_session_path) do |f| %>
            <div class="form-group wow fadeInDown">
              <%= f.email_field :email,
                class: "form-control" %>
            </div>
            <div class="form-group wow fadeInDown">
              <%= f.password_field :password, class: "form-control"%>
            </div>

              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>

            <div class="wow fadeInDown">
              <center>
                <%= f.submit "Sign in", class: "btn btn-primary" %>
                <%= link_to "sign up", "#", class: "btn-lines dark light wow
            fadeInUp animated smooth-scroll btn btn-default btn-green", type: "button",
            data: {toggle: "modal", target: "#signin_modal1"} %>
              </center>

            </div>
          <% end %>
          <button id="kkk">sss</button>
          </br>
          <div class="row col-md-offset-1">
            <%= link_to "auth/facebook",
              class: "btn btn-default btn-social-login col-md-10 clear-fix",
                id: "btn-fb" do %>
              <i class="fa fa-facebook-square"></i>
              <span class="btn-text">sign with account facebook</span>
            <% end %>
            </br>
            </br>
            <%= link_to "auth/google_oauth2",
              class: "btn btn-default btn-social-login col-md-10 clear-fix",
                id: "btn-gp" do %>
              <i class="fa fa-google-plus-square"></i>
              <span class="btn-text">sign with account google+</span>
            <% end %>
            </br>
            </br>
            <%= link_to "auth/twitter",
              class: "btn btn-default btn-social-login col-md-10 clear-fix",
                id: "btn-tw" do %>
              <i class="fa fa-twitter-square"></i>
              <span class="btn-text">sign with account twitter</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="signin_modal1" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="subtitle wow fadeInDown text-center"
          data-wow-duration="500ms" data-wow-delay=".3s">Log in</h4>
      </div>
      <div class="modal-body">
        <div class="signin-form">
          <%= form_for(:registration, url: new_user_registration_path, :html => { :method => :get}) do |f| %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>
          <button id="kkk1" type="button">sssss</button>
        </div>
      </div>
    </div>
  </div>
</div>



