<% provide :title, t(".title") %>
<div class="container custom_width">
  <h3 class="text-center">Danh sách khóa học</h3>
  <div class="row">
    <% if @user_courses.blank? %>
      Bạn chưa đăng ký khóa học nào. Bạn có thể vào đây để đắng ký khóa học mà bạn mong muốn
    <% else %>
      <% @user_courses.each do |course| %>
        <div class="col-sm-6 col-md-4 ">
          <div class="thumbnail product">
            <div class="caption">
              <div class="img-caption">
                  <%= link_to image_tag(course.image.url, style: "height:300px; width: 300px"),
                    members_course_lessons_path(course),
                    class: "widget widget-hover-effect4 themed-background height-300 width-300" %>
                <p class="desc">
                  <%= course.name %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
