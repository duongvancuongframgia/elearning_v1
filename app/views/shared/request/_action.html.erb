<% if request.pending? %>
  <%= link_to "appove", admins_set_status_courses_path(id: request.id, status: 1),
    class: "btn btn-success btn-xs" %>
  <%= link_to "reject", admins_set_status_courses_path(id: request.id, status: 2),
    class: "btn btn-danger btn-xs" %>
<% elsif request.approver? %>
  <%= link_to "reject", admins_set_status_courses_path(id: request.id, status: 2),
    class: "btn btn-danger btn-xs" %>
<% elsif request.reject? %>
  <%= link_to "appove", admins_set_status_courses_path(id: request.id, status: 1),
    class: "btn btn-danger btn-xs" %>
<% end %>
