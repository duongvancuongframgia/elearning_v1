<div class="container custom_width">
  <h3 class="text-center">Danh sách bài kiểm tra</h3>
  <br>
  <div>
    <%= link_to students_course_lesson_path(@course, @lesson),
      class: "btn btn-default" do %>
      <i class="fa fa-chevron-left"></i> Bài học
    <% end %>
  </div>
  <br>
  <div class="row">
    <div class="row ">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr class="table-center">
                <th>Stt</th>
                <th>Thời gian</th>
                <th>Điểm</th>
                <th>Ngày</th>
                <th>Trạng thái</th>
                <th class="text-center">Kết quả</th>
              </tr>
            </thead>
            <tbody class="table-center">
              <%= render(@exams, exams: @exams) || "Dữ liệu không tồn tại" %>
            </tbody>
          </table>
          </div>
          <center><%= paginate @exams %></center>
        </div>
      </div>
    </div>
  </div>
</div>
