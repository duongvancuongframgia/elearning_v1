<div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">exam</h3>
      </div>
      <div class="panel-body">
        <div>
          <%= form_for [:students, @course, @lesson, @exam] do |f| %>
            <div class="form-group">
              <div>
                <%= render "shared/error_messages", object: f.object %>
              </div>
            </div>

            <div class="form-group">
              <%= @exam.name %>
            </div>


            <%= f.fields_for :results do |ff| %>
              <div class="clear-fix answers-form">
                <div class="form-group">
                    <%= ff.object.question.name %>
                    <% ff.object.question.answers.each do |answer| %>
                      <% if(answer.result.present? &&  answer.id == answer.result.answer_id) %>
                        <%= ff.radio_button :answer_id, answer.id, checked: "checked" %>
                      <% else %>
                        <%= ff.radio_button :answer_id, answer.id %>
                      <% end %>
                      <%= answer.name %>
                      <% if(answer.result.present? &&  answer.id == answer.result.answer_id && answer.is_correct?) %>
                        success
                      <% end %>
                    <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
