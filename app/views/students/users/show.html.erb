<% provide :title, "Thông tin người dùng" %>
<div class="panel-content">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        Thông tin người dùng
      </h3>
    </div>
    <br>
    <br>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4" align="center">
          <%= image_tag @user.avatar.url, class: "height-250 width-250" %>
        </div>
        <div class="col-md-8 ">
          <table class="table table-hover">
            <tbody>
              <tr>
                <td>
                  <strong>
                    <i class="gi gi-user"></i> <%= t "name" %>
                  </strong>
                </td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="gi gi-envelope"></i> <%= t "email" %>
                  </strong>
                </td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <% if @user.male? %>
                      <i class="gi gi-male"></i>
                    <% elsif @user.female? %>
                      <i class="gi gi-female"></i>
                    <% end %>
                    <%= t "gender" %>
                  </strong>
                </td>
                <td><%= t "#{@user.gender}" %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="hi hi-earphone"></i> <%= t "number_of_phone" %>
                  </strong>
                </td>
                <td><%= @user.number_of_phone %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="gi gi-home"></i> <%= t "address" %>
                  </strong>
                </td>
                <td><%= @user.address %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="gi gi-group"></i> <%= t "role" %>
                  </strong>
                </td>
                <td><%= @user.role %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="gi gi-birthday_cake"></i> <%= t "birthday" %>
                  </strong>
                </td>
                <td><%= l @user.birthday, format: :date_month_year_v1 if @user.birthday.present? %></td>
              </tr>
            </tbody>
          </table>
          <% if @user.is_user? current_user %>
            <%= link_to t("dashboard.users.edit_password"), edit_user_registration_path,
              class: "btn btn-primary" %>
            <%= link_to t("dashboard.users.edit_profile"),
              edit_students_user_path(current_user), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
