<% provide :title, t("list_user") %>
<%= link_to new_teachers_course_lesson_path,
  class: "btn btn-md btn-success" do %>
  <i class="glyphicon glyphicon-plus"></i> add lesson
<% end %>
<br>
<br>
<div class="row manage_user">
  <div class="col-md-12">
    <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="active">
          <th> index </th>
          <th> name </th>
          <th> description</th>
          <th> content </th>
          <th> action </th>
        </tr>
      </thead>
      <tbody>
        <%= render(@lessons, lessons: @lessons, course: @course) || "data_not_find" %>
      </tbody>
    </table>
    </div>
    <center><%= paginate @lessons %></center>
  </div>
</div>
<div class="modal_show_details">
  <%= render "shared/model_show" %>
</div>
