<div class="panel panel-info">
  <div class="panel-heading">
    <center><h3 class="panel-title"><%= yield(:title) %></h3></center>
  </div>
  <div class="panel-body">
    <div class="container form-horizontal">
      <%= form_for [:teachers, @course, @lesson] do |f| %>
        <div class="form-group">
          <div class="col-md-offset-3">
            <%= render "shared/error_messages", object: f.object %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :name, value: "Tên", class: "col-md-2 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :description, value: "Mô tả", class: "col-md-2 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :content, value: "Nội dung", class: "col-md-2 control-label" %>
          <div class="col-md-8">
            <%= f.text_area :content, class: "form-control ckeditor" %>
          </div>
        </div>

        <div class="form-group" >
          <div class="col-md-5 col-md-offset-3">
            <%= f.submit yield(:button_text),
              class: "btn btn-primary form-control" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
